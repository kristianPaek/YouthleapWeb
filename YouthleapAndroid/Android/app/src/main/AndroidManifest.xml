<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tech.oscar.youthleap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".YouthLeapApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/NoTitleTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:theme="@style/NoTitleTheme" />
        <activity
            android:name=".ui.activity.ForgetPasswordActivity"
            android:theme="@style/NoTitleTheme" />
        <activity android:name=".ui.activity.MainActivity" />
        <activity
            android:name=".ui.activity.EditSchoolProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activity.EditTutorProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activity.EditStudentProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activity.EditParentProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activity.ChangePasswordActivity"
            android:windowSoftInputMode="stateHidden" />

        <!-- Manage account -->
        <activity android:name=".ui.activity.MaMaTutorsActivity" />
        <activity android:name=".ui.activity.MaMaStudentsActivity" />
        <activity android:name=".ui.activity.MaMaParentsActivity" />
        <!-- Online store -->
        <activity android:name=".ui.activity.MaOnProductCategoryActivity" />
        <activity android:name=".ui.activity.MaOnProductActivity" />

        <!-- crop image -->
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />

    </application>

</manifest>